@page "{id:int}"
@model RazorPagesMovie.Pages.Movies.RateModel

@{
    ViewData["Title"] = "Rate";
}

<h1>Rate</h1>

<h4>@Model.Movie.Title </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieRating.MovieID" />
            <div class="form-group">
                <label asp-for="MovieRating.Star" class="control-label"></label>
                <input asp-for="MovieRating.Star" class="form-control" />
                <span asp-validation-for="MovieRating.Star" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieRating.Comment" class="control-label"></label>
                <input asp-for="MovieRating.Comment" class="form-control" />
                <span asp-validation-for="MovieRating.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
