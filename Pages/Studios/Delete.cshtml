@page "{id:int}"
@model RazorPagesMovie.Pages.Studios.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ConcurrencyErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Studio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio!.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio!.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio!.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio!.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio!.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio!.ConcurrencyToken)
        </dt>
        <dd class="col-sm-10">
            @Utils.Utility.GetLastChars(Model.Studio!.ConcurrencyToken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio!.Director)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Studio.Director != null)
            {
                @Html.DisplayFor(model => model.Studio!.Director.FullName)
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Studio!.ID" />
        <input type="hidden" asp-for="Studio!.ConcurrencyToken" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
