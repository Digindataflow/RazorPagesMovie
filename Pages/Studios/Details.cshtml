@page "{id:int}"
@model RazorPagesMovie.Pages.Studios.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Studio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Director)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Studio.Director != null) {
                @Html.DisplayFor(model => model.Studio.Director.FullName)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Movies)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Studio.Movies != null)
            {
                @:<ul>
                @foreach (var m in Model.Studio.Movies)
                {
                    @:<li>
                        @m.Title
                    @:</li>
                }
                @:</ul>
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Studio?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
